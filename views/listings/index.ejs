#filters {
    display: flex;
    gap: 1rem;
    padding: 0.5rem;
    overflow-x: auto; /* Makes it horizontally scrollable */
    white-space: nowrap; /* Ensures filters stay in a single row */
    scrollbar-width: thin; /* For Firefox */
    -ms-overflow-style: none; /* For IE/Edge */
}

#filters::-webkit-scrollbar {
    display: none; /* Hides scrollbar in Chrome/Safari */
}

#filters a {
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: inherit; /* Keeps the text color of the parent */
}

.filter {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 80px;
    opacity: 0.75;
    transition: opacity 0.3s ease; /* Smooth opacity transition */
}

.filter:hover {
    opacity: 1;
    cursor: pointer;
}

.filter p {
    font-size: 0.8rem;
    margin: 0;
    text-align: center;
}

.filter:hover p {
    text-decoration: underline;
    
}

.tax-toggles {
    margin-left: auto;
    white-space: nowrap;
}

.tax-toggles {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.2rem;
    padding: 1rem;
    display: flex;
    align-items: center;
}

.toggle .form-check-input:checked {
    background-color: #fe424d;
    border-color: rgb(255, 255, 255);
}

.toggle .form-check-input:focus {
    box-shadow: none;
    outline: #fe424d;
}

/* On larger screens, allow wrapping so they look like a grid */
@media (min-width: 768px) {
    #filters {
        flex-wrap: wrap;
        overflow-x: visible;
        white-space: normal;
    }
}

    </style>

